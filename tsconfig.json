{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "lib" : ["es2015", "es2015.iterable", "dom"]
    },
    "compileOnSave": true,
    "typeRoots": [
        "node_modules/@types"
    ],
    "types": [
        "core-js",
        "node"
    ],
    "exclude": [
        "node_modules/*",
        "**/*-aot.ts"
    ]
}